<odoo>
  <data>
    <record model="ir.ui.view" id="cine.listado_salas_form">
      <field name="name">Formulario de salas</field>
      <field name="model">cine.salas_model</field>
      <field name="arch" type="xml">
        <form string="Nueva sala">
          <sheet>
            <group name="GrupoPadre">
              <field name="name"/>
              <field name="cantidad_butacas_totales"/>
              
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="cine.listado_salas_tree">
      <field name="name">Listado de salas</field>
      <field name="model">cine.salas_model</field>
      <field name="arch" type="xml">
        <tree>

          <field name="name"/>
          <field name="cantidad_butacas_totales"/>
          
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="cine.action_window_salas">
      <field name="name">Listado de salas</field>
      <field name="res_model">cine.salas_model</field>
      <field name="view_mode">tree,form</field>
    </record>


  </data>
</odoo>
