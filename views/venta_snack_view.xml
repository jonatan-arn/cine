<odoo>
  <data>
    <record model="ir.ui.view" id="cine.listado_venta_snacks_form">
      <field name="name">Formulario de ventas de snacks</field>
      <field name="model">cine.venta_snack_model</field>
      <field name="arch" type="xml">
        <form string="Nueva ventas">
          <header>
            <button name="eliminaFacturas" type="object" confirm="Desea eliminar las facturas?" string="Eliminar facturas" class="oe_highlight" />
            <button name="ocultarFacturas" type="object"  string="Archivar facturas" class="oe_highlight" />
          </header>
          <sheet>
            <notebook>
              <page string="Datos de la factura">
                <group name="GrupoPadre">
                  <field name="id"/>
                  <field name="snack"/>
                  <field name="cantidad_snack"/>
                  <field name="precio_total"/>
                </group>
              </page>
              <page string="Datos del snack">
                <group name="GrupoPadre">
                  <field name="snack"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="cine.listado_venta_snacks_tree">
      <field name="name">Listado de venta de snacks</field>
      <field name="model">cine.venta_snack_model</field>
      <field name="arch" type="xml">
        <tree decoration-muted="active == True">
          <field name="id"/>
          <field name="snack"/>
          <field name="cantidad_snack"/>
          <label for="fecha" class="oe_edit_only" />
          <h1>
            <field name="fecha"/>
          </h1>
          <field name="precio_total"/>
        </tree>
      </field>
    </record>




    <record model="ir.ui.view" id="cine.venta_pivot">
      <field name="name">Pivot de ventas</field>
      <field name="model">cine.venta_snack_model</field>
      <field name="arch" type="xml">
        <pivot string="Pivot de Ventas">
          <field name="fecha" type="row" interval="month" />
          <field name="cantidad_snack" type="measure" />
        </pivot>
      </field>
    </record>


    <record model="ir.ui.view" id="cine.venta_graph">
      <field name="name">Grafico de ventas</field>
      <field name="model">cine.venta_snack_model</field>
      <field name="arch" type="xml">
        <graph type="bar" stacked="True" string="Grafico de Ventas">
          <field name="fecha" type="row" interval="month" />
          <field name="cantidad_snack" type="measure" />
        </graph>
      </field>
    </record>

    <record model="ir.ui.view" id="view_cine_venta_search">
      <field name="name">Filtro active</field>
      <field name="model">cine.venta_snack_model</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" />
          <field name="director"/>
          <field name="protagonista"/>
          <field name="fecha_estreno"/>
          <field name="fecha_fin_en_el_cine"/>
          <field name="poster"/>

          <filter string="Activas" name="activas" domain="[{'active','=','True'}]"/>
          <filter string="Archivadas" name="noactivas" domain="[{'active','=','False'}]"/>

        </search>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="cine.action_window_venta_snacks">
      <field name="name">Listado de ventas de snacks</field>
      <field name="res_model">cine.venta_snack_model</field>
      <field name="view_mode">tree,form,graph,pivot</field>
    </record>


  </data>
</odoo>