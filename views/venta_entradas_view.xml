<odoo>
  <data>
    <record model="ir.ui.view" id="cine.listado_venta_entradas_form">
      <field name="name">Formulario de ventas de entradas</field>
      <field name="model">cine.venta_entradas_model</field>
      <field name="arch" type="xml">
        <form string="Nuevo horario">
          <sheet>
            <group name="GrupoPadre">
              
                <field name="id"/>
                <field name="butaca"/>
                <field name="cantidad_butacas"/>
                
                <field name="precio_total"/>
                


            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="cine.listado_venta_entradas_tree">
      <field name="name">Listado de venta de entradas</field>
      <field name="model">cine.venta_entradas_model</field>
      <field name="arch" type="xml">
        <tree>           
                <field name="id"/>                
                <field name="butaca">
                  <tree>
                    <field name="precio"/>
                    <field name="pelicula"/>
                    <field name="hora"/>
                    <field name="sala"/>
                  </tree>
                </field>
                <field name="cantidad_butacas"/>                
                <field name="precio_total"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="cine.action_window_venta_entradas">
      <field name="name">Listado de ventas de entradas</field>
      <field name="res_model">cine.venta_entradas_model</field>
      <field name="view_mode">tree,form</field>
    </record>


  </data>
</odoo>